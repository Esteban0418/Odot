<%= title "Todo Lists" %>

<ul class="list todo-lists no-bullet">
<% @todo_lists.each do |todo_list| %>
  <li id="<%= dom_id(todo_list) %>" class="clearfix">
    <%= link_to todo_list_todo_items_path(todo_list), class: "row" do %>
      <div class="small-10 medium-11 columns truncate" title="<%= todo_list.title %>"><%= todo_list.title %></div>
      <div class="small-2 medium-1 columns"><span class="label round"><%= todo_list.todo_items.size %></span></div>
    <% end %>
  </li>
<% end %>
</ul>

<div>
  <%= link_to "New List", new_todo_list_path , remote: true , class: "small-12 columns text-left"%>
</div>

<div id="task-form" style="display:none;">

</div>

<div>
 <%= link_to "Show All Lists", all_lists_todo_lists_path, class: "small-12 columns text-center"%>
</div>